<?xml version="1.0" encoding="utf-8"?>
<ModMetaData>
  <name>{{ cookiecutter.mod_name }}</name>
  <authors>{{ ', '.join(cookiecutter.authors.split(',')) }}</authors>
  <packageId>{{ cookiecutter.package_id }}</packageId>
  <supportedVersions>
  {% for supported_version in cookiecutter.supported_versions.split(',') %}
    <li>{{ supported_version }}</li>
  {% endfor %}
  </supportedVersions>
  <description>{{ cookiecutter.in_game_description }}</description>
  <url>{{ cookiecutter.git_repository_url }}</url>
</ModMetaData>
